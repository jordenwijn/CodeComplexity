{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build CodeAnalyzer world",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-o",
        "helloworld",
        "helloworld.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "gcc.exe build active file",
      "command": "C:\\apps\\MinGW\\bin\\gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:\\apps\\MinGW\\bin"
      }
    }
  ]
}